{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": ["react", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "PropTypes": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "quotes": [2, "double"],
    "react/jsx-filename-extension": 0,
    "react/react-in-jsx-scope": 0,
    "react/prop-types": [
      2,
      {
        "ignore": ["children"]
      }
    ],
    "react/sort-comp": [
      2,
      {
        "order": [
          "static-methods",
          "statics",
          "constructor",
          "everything-else",
          "lifecycle",
          "render"
        ]
      }
    ]
  }
}
