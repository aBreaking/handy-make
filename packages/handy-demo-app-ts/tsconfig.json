{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "experimentalDecorators": true,
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
