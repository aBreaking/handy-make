{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "PropTypes": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "eqeqeq": 2,
    "quotes": [2, "double"],
    "class-methods-use-this": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": 0,
    "react/react-in-jsx-scope": 0,
    "react/destructuring-assignment": 0,
    "react/no-array-index-key": 0,
    "react/prop-types": [
      2,
      {
        "ignore": ["children"]
      }
    ],
    "react/sort-comp": [
      2,
      {
        "order": [
          "static-methods",
          "statics",
          "constructor",
          "everything-else",
          "lifecycle",
          "render"
        ]
      }
    ],
    "react/forbid-prop-types": 0
  }
}
